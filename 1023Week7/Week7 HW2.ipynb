      "     *****************************\n",
      "    *******************************\n",
      "   *********************************\n",
      "  ***********************************\n",
      " *************************************\n",
      "***************************************\n"
     ]
    }
   ],
   "source": [
    "star=input(\"請問要列印幾行星星:\")\n",
    "if star.isdecimal():\n",
    "    line=int(star)\n",
    "    for i in range(1,line+1):\n",
    "        for j in range(0,line-i):\n",
    "            print(\" \",end=\"\")\n",
    "        for k in range(0,2*i-1):\n",
    "            print(\"*\",end=\"\")\n",
    "        print()\n",
    "else:\n",
    "    print(\"輸入格式錯誤\")\n"
   ]
